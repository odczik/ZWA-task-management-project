            const loginModal = document.querySelector('.nav-login-modal');
            const registerModal = document.querySelector('.nav-register-modal');

            const loginModalForm = loginModal.querySelector('form');
            const registerModalForm = registerModal.querySelector('form');

            const loginButton = document.querySelector('.nav-action');

            const registerModalButton = document.querySelector('.register-modal-button');
            const loginModalButton = document.querySelector('.login-modal-button');

            // Show the modal
            loginButton.addEventListener('click', () => {
                loginModal.style.visibility = 'visible';
                loginModalForm.classList.add("open");
            });
            registerModalButton.addEventListener('click', (event) => {
                event.preventDefault();
                registerModal.style.visibility = 'visible';
                registerModalForm.classList.add("open");
                closeLoginDialogWithAnimation();
            });
            loginModalButton.addEventListener('click', (event) => {
                event.preventDefault();
                loginModal.style.visibility = 'visible';
                loginModalForm.classList.add("open");
                closeRegisterDialogWithAnimation();
            });

            // Close the modal when clicking outside of it
            loginModal.addEventListener('click', (event) => {
                if (event.target === loginModal) {
                    closeLoginDialogWithAnimation();
                }
            });
            registerModal.addEventListener('click', (event) => {
                if (event.target === registerModal) {
                    closeRegisterDialogWithAnimation();
                }
            });

            // Function to close the dialog with animation
            function closeLoginDialogWithAnimation() {
                loginModalForm.classList.remove("open");
                loginModalForm.classList.add('closing');
                loginModal.addEventListener('animationend', () => {
                    loginModalForm.classList.remove('closing');
                    loginModal.style.visibility = "hidden";
                }, { once: true });
            }
            function closeRegisterDialogWithAnimation() {
                registerModalForm.classList.remove("open");
                registerModalForm.classList.add('closing');
                registerModal.addEventListener('animationend', () => {
                    registerModalForm.classList.remove('closing');
                    registerModal.style.visibility = "hidden";
                }, { once: true });
